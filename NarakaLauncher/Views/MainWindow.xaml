<Window x:Class="NarakaLauncher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NarakaLauncher.ViewModels"
        xmlns:views="clr-namespace:NarakaLauncher.Views.Sections"
        Title="NarakaTweaks Launcher"
        Height="720"
        Width="1180"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:WelcomeViewModel}">
            <views:WelcomeSection />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AuthenticationViewModel}">
            <views:AuthenticationSection />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CoreTweaksViewModel}">
            <views:CoreTweaksSection />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GpuTweaksViewModel}">
            <views:GpuTweaksSection />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OptionalTweaksViewModel}">
            <views:OptionalTweaksSection />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsEditorViewModel}">
            <views:SettingsEditorSection />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ClientDownloadsViewModel}">
            <views:ClientDownloadsSection />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AboutViewModel}">
            <views:AboutSection />
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#1C1C1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Background="#2B2B2E"
                CornerRadius="0"
                Padding="24"
                BorderBrush="#3A3A3C"
                BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="NarakaTweaks"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White" />
                <TextBlock Text="Complete launcher & tweak hub"
                           Margin="0,4,0,16"
                           Foreground="#8E8E93" />
                <ListBox ItemsSource="{Binding Steps}"
                         SelectedItem="{Binding SelectedStep}"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="White">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0,4" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border"
                                                Background="Transparent"
                                                CornerRadius="10"
                                                Padding="12">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#2D2D30" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#3A3A3C" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Glyph}"
                                           FontSize="16"
                                           VerticalAlignment="Center" />
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="{Binding Title}"
                                               FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Description}"
                                               Foreground="#8E8E93"
                                               FontSize="12" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1"
              Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Margin="32,24,32,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding HeaderTitle}"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Foreground="White" />
                    <TextBlock Text="{Binding HeaderDescription}"
                               Foreground="#C6C6C8"
                               Margin="0,4,0,0" />
                </StackPanel>
                <Border Grid.Column="1"
                        Background="#2B2B2E"
                        CornerRadius="8"
                        Padding="12"
                        HorizontalAlignment="Right">
                    <TextBlock Text="{Binding CurrentStepPosition}"
                               Foreground="#8E8E93" />
                </Border>
            </Grid>
            <Border Grid.Row="1"
                    Margin="32,16,32,16"
                    Background="#1F1F22"
                    CornerRadius="16"
                    Padding="16">
                <ContentControl Content="{Binding SelectedStep.ContentViewModel}" />
            </Border>
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="32,0,32,24">
                <Button Content="Back"
                        Padding="18,8"
                        Margin="0,0,12,0"
                        Command="{Binding GoBackCommand}" />
                <Button Content="Next"
                        Padding="18,8"
                        Command="{Binding GoNextCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
