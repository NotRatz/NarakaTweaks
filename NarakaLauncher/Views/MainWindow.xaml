<Window x:Class="NarakaLauncher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NarakaTweaks Launcher"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#1C1C1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Border Background="#2B2B2E"
                CornerRadius="12"
                Margin="24"
                Padding="24"
                Grid.Column="0">
            <StackPanel>
                <TextBlock Text="NarakaTweaks"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White" />
                <TextBlock Text="Launcher bootstrap in progress..."
                           Margin="0,16,0,0"
                           Foreground="#E0E0E0"
                           TextWrapping="Wrap" />
            </StackPanel>
        </Border>
        <Border Background="#262629"
                CornerRadius="12"
                Margin="24"
                Padding="24"
                Grid.Column="1">
            <StackPanel>
                <TextBlock Text="Getting ready"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White" />
                <ItemsControl Margin="0,16,0,0"
                              ItemsSource="{Binding StatusMessages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       Foreground="#C6C6C8"
                                       Margin="0,4,0,4" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</Window>
