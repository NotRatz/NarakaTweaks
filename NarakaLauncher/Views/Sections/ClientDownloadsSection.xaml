<UserControl x:Class="NarakaLauncher.Views.Sections.ClientDownloadsSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Client management"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="White" />
            <TextBlock Text="Manage global, Steam, and region-specific clients without touching batch files."
                       Margin="0,8,0,0"
                       TextWrapping="Wrap"
                       Foreground="#C6C6C8" />
            <TextBlock Text="Active client: {Binding ActiveClientName}"
                       Margin="0,8,0,0"
                       Foreground="#8E8E93" />
        </StackPanel>
        <Grid Grid.Row="1"
              Margin="0,16,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Border Background="#2D2D30"
                    CornerRadius="8"
                    Padding="8">
                <ListBox ItemsSource="{Binding Clients}"
                         SelectedItem="{Binding SelectedClient}"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="SemiBold"
                                           Foreground="White" />
                                <TextBlock Text="{Binding Description}"
                                           Foreground="#8E8E93"
                                           TextWrapping="Wrap"
                                           FontSize="12" />
                                <TextBlock Text="{Binding Status}"
                                           Foreground="#C6C6C8"
                                           FontSize="12" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
            <Border Grid.Column="1"
                    Background="#2D2D30"
                    CornerRadius="8"
                    Margin="16,0,0,0"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="Client details"
                               FontWeight="SemiBold"
                               Foreground="White" />
                    <TextBlock Text="Install path"
                               Margin="0,12,0,4"
                               Foreground="#8E8E93"
                               FontSize="12" />
                    <TextBlock Text="{Binding SelectedClient.InstallPath}"
                               TextWrapping="Wrap"
                               Foreground="#C6C6C8" />
                    <TextBlock Text="Status"
                               Margin="0,12,0,4"
                               Foreground="#8E8E93"
                               FontSize="12" />
                    <TextBlock Text="{Binding SelectedClient.Status}"
                               Foreground="#C6C6C8" />
                    <StackPanel Orientation="Horizontal"
                                Margin="0,24,0,0">
                        <Button Content="Queue download"
                                Padding="12,6"
                                Margin="0,0,8,0"
                                Command="{Binding InstallOrUpdateCommand}" />
                        <Button Content="Set active"
                                Padding="12,6"
                                Command="{Binding MarkAsActiveCommand}" />
                    </StackPanel>
                    <Button Content="Refresh status"
                            Margin="0,12,0,0"
                            Padding="12,6"
                            Command="{Binding RefreshStatusCommand}" />
                </StackPanel>
            </Border>
        </Grid>
        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   Foreground="#C6C6C8" />
    </Grid>
</UserControl>
