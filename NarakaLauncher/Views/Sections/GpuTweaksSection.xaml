<UserControl x:Class="NarakaLauncher.Views.Sections.GpuTweaksSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="GPU specific tuning"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="White" />
            <TextBlock Text="Driver-level optimizations migrate here so you can queue NVIDIA, AMD, and Intel toggles together."
                       Margin="0,8,0,0"
                       TextWrapping="Wrap"
                       Foreground="#C6C6C8" />
        </StackPanel>
        <ListView Grid.Row="1"
                  Margin="0,16,0,16"
                  ItemsSource="{Binding Tweaks}"
                  Background="#2D2D30"
                  BorderThickness="0"
                  Foreground="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="8"
                            Padding="12"
                            CornerRadius="6"
                            Background="#1F1F22">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsSelected}"
                                      VerticalAlignment="Center"
                                      Foreground="White" />
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="SemiBold"
                                           Foreground="White" />
                                <TextBlock Text="{Binding Description}"
                                           TextWrapping="Wrap"
                                           Foreground="#C6C6C8"
                                           Margin="0,4,0,0" />
                                <TextBlock Text="{Binding Category}"
                                           Foreground="#8E8E93"
                                           FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBlock Text="{Binding LastAppliedMessage}"
                       VerticalAlignment="Center"
                       Foreground="#C6C6C8"
                       Margin="0,0,16,0" />
            <Button Content="Reset GPU tweaks"
                    Padding="12,6"
                    Margin="0,0,8,0"
                    Command="{Binding RestoreDefaultsCommand}" />
            <Button Content="Apply GPU tweaks"
                    Padding="12,6"
                    Command="{Binding ApplyCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
