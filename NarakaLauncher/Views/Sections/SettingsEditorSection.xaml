<UserControl x:Class="NarakaLauncher.Views.Sections.SettingsEditorSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="QualitySettings editor"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="White" />
            <TextBlock Text="Preview the configuration replacements for QualitySettings.txt. Presets sync across all clients."
                       Margin="0,8,0,0"
                       TextWrapping="Wrap"
                       Foreground="#C6C6C8" />
        </StackPanel>
        <ScrollViewer Grid.Row="1"
                      Margin="0,16,0,16"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Groups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,16"
                                    Padding="16"
                                    Background="#2D2D30"
                                    CornerRadius="8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="White" />
                                    <ItemsControl Margin="0,12,0,0"
                                                  ItemsSource="{Binding Settings}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,8,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="2*" />
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White" />
                                                        <TextBlock Text="{Binding Description}"
                                                                   TextWrapping="Wrap"
                                                                   Foreground="#8E8E93"
                                                                   FontSize="12" />
                                                    </StackPanel>
                                                    <TextBox Grid.Column="1"
                                                             Margin="12,0,12,0"
                                                             Text="{Binding CurrentValue, UpdateSourceTrigger=PropertyChanged}"
                                                             Padding="6"
                                                             Background="#1F1F22"
                                                             Foreground="White"
                                                             BorderBrush="#3A3A3C" />
                                                    <TextBlock Grid.Column="2"
                                                               Text="Default: {Binding DefaultValue}"
                                                               Foreground="#8E8E93"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,0,0" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="2"
                   Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Left">
                <TextBlock Text="Preset"
                           VerticalAlignment="Center"
                           Foreground="#C6C6C8" />
                <ComboBox x:Name="PresetSelector"
                          Width="140"
                          ItemsSource="{Binding Presets}"
                          SelectedIndex="1"
                          Margin="8,0,0,0" />
                <Button Content="Apply preset"
                        Padding="12,6"
                        Margin="8,0,0,0"
                        Command="{Binding ApplyPresetCommand}"
                        CommandParameter="{Binding SelectedItem, ElementName=PresetSelector}"
                        ToolTip="Applies the selected preset to all fields." />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right">
                <TextBlock Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="#C6C6C8"
                           Margin="0,0,12,0" />
                <Button Content="Save changes"
                        Padding="12,6"
                        Margin="0,0,0,0"
                        Command="{Binding SaveCommand}" />
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
