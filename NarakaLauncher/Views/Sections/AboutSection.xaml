<UserControl x:Class="NarakaLauncher.Views.Sections.AboutSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Ready to launch"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="White" />
            <TextBlock Text="{Binding VersionSummary}"
                       Margin="0,8,0,0"
                       TextWrapping="Wrap"
                       Foreground="#C6C6C8" />
        </StackPanel>
        <Border Grid.Row="1"
                Margin="0,16,0,16"
                Background="#2D2D30"
                Padding="24"
                CornerRadius="12">
            <StackPanel>
                <TextBlock Text="Current active client"
                           Foreground="#8E8E93"
                           FontSize="12" />
                <TextBlock Text="{Binding ActiveClientName}"
                           FontSize="20"
                           Foreground="White"
                           FontWeight="SemiBold" />
                <TextBlock Text="Quick links"
                           Margin="0,16,0,8"
                           Foreground="#8E8E93" />
                <ItemsControl ItemsSource="{Binding QuickLinks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,4,0,4">
                                <Ellipse Width="8"
                                         Height="8"
                                         Fill="#5AC8FA"
                                         VerticalAlignment="Center" />
                                <TextBlock Text="{Binding}"
                                           Margin="8,0,0,0"
                                           Foreground="#C6C6C8" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <StackPanel Orientation="Horizontal"
                            Margin="0,16,0,0">
                    <Button Content="View releases"
                            Padding="12,6"
                            Margin="0,0,12,0"
                            Command="{Binding OpenSupportCommand}" />
                    <Button Content="Join Discord"
                            Padding="12,6"
                            Command="{Binding OpenDiscordCommand}" />
                </StackPanel>
            </StackPanel>
        </Border>
        <TextBlock Grid.Row="2"
                   Text="Close the launcher to return later or keep it running to monitor cheat detection services."
                   Foreground="#8E8E93" />
    </Grid>
</UserControl>
